@model AquaTrack.Models.Feeding

@{
    ViewData["Title"] = "Record Feeding";
}

<h2>Record Feeding</h2>

<div class="card p-4 mt-3">
    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="FishId" />

        <div class="form-group mb-3">
            <label asp-for="FoodType" class="form-label"></label>
            <input asp-for="FoodType" class="form-control" placeholder="Enter the type of food" />
            <span asp-validation-for="FoodType" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="FedAt" class="form-label"></label>
            <input asp-for="FedAt" type="datetime-local" class="form-control" />
            <span asp-validation-for="FedAt" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save Feeding</button>
        <a asp-controller="Fish" asp-action="Details" asp-route-id="@Model.FishId"
           class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
