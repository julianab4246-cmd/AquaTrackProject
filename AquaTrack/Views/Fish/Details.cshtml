@model AquaTrack.Models.Fish

<h2>Fish Details</h2>

<p><strong>Name:</strong> @Model.Name</p>
<p><strong>Species:</strong> @Model.Species</p>
<p><strong>Age (years):</strong> @Model.Age</p>
<p><strong>Age (months):</strong> @ViewBag.AgeInMonths</p>
<p><strong>Tank:</strong> @Model.Tank?.TankName</p>

@if (ViewBag.IsTooBig == true)
{
    <p class="text-danger"><strong>This fish may be too big for its tank!</strong></p>
}
<a class="btn btn-success"
   asp-controller="Feeding"
   asp-action="Create"
   asp-route-fishId="@Model.Id">
    Record Feeding
</a>

<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</p>
